<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".view.AdminMainPageActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_admin_main_page"
        android:layout_width="770dp"
        android:layout_height="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminMainPage" />

    <TextView
        android:id="@+id/textViewAdminMainPage"
        android:layout_width="800dp"
        android:layout_height="150dp"
        android:background="@drawable/button_admin_dashboard"
        android:fontFamily="@font/average_sans"
        android:text="Admin Dashboard"
        android:gravity="center"
        android:textColor="@color/on_primary"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>