<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_selector"
    android:elevation="20dp"
    android:layout_margin="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/main_page_rv_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans"
        android:text="Title"
        android:textColor="@color/on_primary"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/main_page_rv_imageview_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_page_rv_textview_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="Desc"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/main_page_rv_imageview_name"
        app:layout_constraintTop_toBottomOf="@+id/main_page_rv_textview_name" />

    <ImageView
        android:id="@+id/main_page_rv_imageview_name"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="10"
        android:background="@drawable/black_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />
</androidx.constraintlayout.widget.ConstraintLayout>