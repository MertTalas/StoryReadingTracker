<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StoryReadingActivity">



    <include
        android:id="@+id/toolbar_reading_page"
        layout="@layout/toolbar_reading_story"

        >


    </include>

    <TextView
        android:id="@+id/textView_story_reading_page_story_text"
        android:layout_width="325dp"
        android:layout_height="246dp"
        android:layout_marginTop="96dp"
        android:background="@color/secondary_light"
        android:ems="10"
        android:text="test"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_reading_page" />

    <TextView
        android:id="@+id/textView_story_reading_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="24dp"
        android:text="Title"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_story_reading_page_story_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_reading_page"
        app:layout_constraintVertical_bias="0.666" />


    <FrameLayout
        android:id="@+id/container_camera"
        android:layout_width="328dp"
        android:layout_height="210dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:background="@color/primary_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>

    <Button
        android:id="@+id/button_storyReadingStartReading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="29dp"
        android:text="Start Reading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_reading_page" />

</androidx.constraintlayout.widget.ConstraintLayout>