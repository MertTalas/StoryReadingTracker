<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainPageActivity"
    android:background="@color/surface">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_main_page"
        android:layout_width="400dp"
        android:layout_height="640dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainPage" />

    <TextView
        android:id="@+id/textViewMainPage"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:background="@drawable/button_dashboard"
        android:fontFamily="@font/average_sans"
        android:text="Dashboard"
        android:gravity="center"
        android:textColor="@color/on_primary"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>